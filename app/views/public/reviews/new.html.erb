<h3>投稿フォーム</h3>
  <%= form_with model: @review, local:true do |f| %>
    <div class="form-group">
      <%= f.label :title,'ゲームタイトル' %>
      <div class="col-md-9">
      <%= f.text_field :title, class:'from-control' %>
      </div>
    </div>

    <!-- 評価 -->
    <div class="form-group">
      <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
      <span id="star"></span>
    </div>

  <!-- 評価javascript -->
  <script>
  document.getElementById('star').innerHTML = ''
  raty(document.getElementById('star'), {
    starOn: '<%= asset_path('star-on.png') %>',
    starOff: '<%= asset_path('star-off.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'review[star]',
    half: true,
  })

  </script>


<div class="form-group">
  <%= f.label :body,'ゲーム内容', class:'col-md-3 col-form-label' %>
  <div class="col-md-9">
  <%= f.text_area :body, class: 'from-control' %>
  </div>
</div>

<div class="form-group">
  <label>タグ(,で区切ると複数タグ登録できます)</label>
  <div class="col-md-9">
    <%= f.text_field :name,value: @tag_list, class: 'form-control' %>
  </div>
</div>

  <% if current_customer != "guestuser" %>
  <div class="form-group">
    <div class="col-md-9">
    <%= f.submit '投稿', class: 'btn btn-success' %>
    </div>
  </div
  <% end %>
<% end %>
