<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <table class="table">
          <tr><%= image_tag @customer.get_profile_image, size: '100x100' %></tr>
          <tr>
            <th>ユーザー名</th>
            <th><%= @customer.name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= @customer.introduction %></th>
          </tr>
        </table>

          <% if current_customer == @customer %>
            <%= link_to edit_customer_path(@customer), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>レビュー一覧</h2>
        <div>
          <%= render 'public/reviews/index', reviews: @reviews %>
        </div>
    </div>
  </div>
</div>