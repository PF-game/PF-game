<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>レビュー詳細</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to(@review.customer) do %>
            <%= image_tag @review.customer.get_profile_image, size:"100x100" %><br>
            <%= @review.customer.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to @review.title, @review %></td>
        </tr>
        <tr>
          <td><%= @review.body %></td>
        </tr>
        <tr>
          <td>
            <div id="star<%= @review.id %>"></div>
            <script>
              document.getElementById('star<%= @review.id %>').innerHTML = ''
              raty(document.getElementById('star<%= @review.id %>'), {
                starOn: '<%= asset_path('star-on.png') %>',
                starOff: '<%= asset_path('star-off.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                score: <%= @review.star %>,
                half: true
                })
            </script>
          </td>
        </tr>

        <!-- タグリスト -->
      <% @review_tags.each do |tag| %>
      <tr>
        <td>
          <i class="fa-sharp fa-solid fa-tag"></i>
          <%= link_to tag.name, admin_search_tag_path(game_tag_id: tag.id) %>
        </td>
      </tr>
      <% end %>
      <tr>
        <td>
          <div>
           <p>コメント件数：<%= @review.review_comments.count %></p>
            <% @review.review_comments.each do |review_comment| %>
              <p><%= image_tag review_comment.customer.get_profile_image, size: '50x50' %></p>
                <%= review_comment.customer.name %>
                <%= review_comment.created_at.strftime('%Y/%m/%d') %><%= review_comment.comment %>
                  <% if review_comment.customer == current_customer %>
                    <%= link_to "削除", review_review_comment_path(review_comment.review, review_comment), method: :delete, class: "btn btn-danger pull-right btn-sm" %>
                  <% end %>
            <% end %>
          </div>
            <div>
              <%= form_with model: [@review, @review_comment] do |f| %>
                <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
                <%= f.submit "送信する" %>
              <% end %>
            </div>
          </td>
        </tr>
      </table>
        <%= link_to '削除', @review, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>